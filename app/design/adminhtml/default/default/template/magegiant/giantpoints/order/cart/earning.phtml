$helperConfig = Mage::helper('giantpoints/config');
?>
<div>
    <?php if ($this->getPoints() > 0): ?>
        <ul class="giant-messages">
            <li class="giantpoints-notice-msg">
                <ul>
                    <li>
                        <?php echo $this->__('Checkout now and earn %s %s !', $this->getPoints(), $helperConfig->getPointLabel()) ?>
                        <?php echo $this->getChildHtml('infopage.link') ?>
                    </li>
                    <?php if ($this->customerIsGuest()): ?>
                        <li>
                            <?php echo $this->__('Applies only to registered customers, may vary when logged in.') ?>
                        </li>
                    <?php endif; ?>
                </ul>
            </li>
        </ul>
    <?php endif; ?>
    <?php foreach ($this->getAppliedRules() as $rule): ?>
        <div>
            <?php foreach ($this->getStaticBlocks($rule) as $block): ?>
                <?php echo $block ?>
            <?php endforeach; ?>
        </div>
    <?php endforeach; ?>
</div>

