    $cus_wrap_class = $this->getData('custom_html_wrapper_class');
    $cus_wrap_id = $this->getData('custom_html_wrapper_id');
    $cus_title = $this->getData('block_title');
    
    if($cus_wrap_class!="")
        $tempclass = "class='".$cus_wrap_class."'";
    else $tempclass ="";
    
    if($cus_wrap_id!="")
        $tempid = "id='".$cus_wrap_id."'";
