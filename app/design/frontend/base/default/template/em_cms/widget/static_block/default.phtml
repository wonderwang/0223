    	<?php if ($cus_title!=null):?>
    		<div class = "block_title">
    			<h3><span><?php echo $this->__($cus_title);?></span></h3>
    		</div>
    	<?php endif;?>
    	<?php echo $this->getText(); ?>
    </div>

<?php if($cus_wrap_class != "" || $cus_wrap_id != "")
    echo "</div>";
