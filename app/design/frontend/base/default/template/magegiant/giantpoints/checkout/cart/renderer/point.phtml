/**
 * GiantPoints show on Review Total
 *
 * @see Magegiant_GiantPoints_Block_Checkout_Cart_Label
 */
?>
<?php if ($this->isEnabled()): ?>

    <?php
    $_helper          = Mage::helper('giantpoints');
    $_spendingPoint   = $this->getSpendingPoint();
    $_pointAmount     = $this->getEarningPoint();
    $_pointForInvitee = $this->getEarningPointForInvitee();
    ?>
    <?php if ($_spendingPoint || $_pointAmount || $_pointForInvitee): ?>
        <?php if ($this->getColspan() == 1): ?><thead><?php endif ?>
        <?php if ($_spendingPoint > 0): ?>
            <tr>
                <td class="a-right" colspan="<?php echo $this->getColspan() ?>"
                    style="<?php echo $this->getTotal()->getStyle() ?>">
                    <?php
                    echo $this->__('You will spend');
                    ?>:
                </td>
                <td class="a-right" style="min-width: 70px;<?php echo $this->getTotal()->getStyle() ?>">
                    <?php echo $_helper->addLabelForPoint($_spendingPoint) ?>
                </td>
            </tr>
        <?php endif ?>
        <?php if ($_pointAmount > 0): ?>
            <tr>
                <td class="a-right" colspan="<?php echo $this->getColspan() ?>"
                    style="<?php echo $this->getTotal()->getStyle() ?>">
                    <?php
                    echo $this->__('You will earn');
                    ?>:
                </td>
                <td class="a-right" style="min-width: 70px;<?php echo $this->getTotal()->getStyle() ?>">
                    <?php echo $_helper->addLabelForPoint($_pointAmount) ?>
                </td>
            </tr>
        <?php endif ?>
        <?php if ($_pointForInvitee > 0): ?>
            <tr>
                <td class="a-right" colspan="<?php echo $this->getColspan() ?>"
                    style="<?php echo $this->getTotal()->getStyle() ?>">
                    <strong style="font-size: 13px;">
                        <?php
                        echo $this->__('Invitee earn');
                        ?>:
                    </strong>
                </td>
                <td class="a-right" style="min-width: 70px;<?php echo $this->getTotal()->getStyle() ?>">
                    <?php echo $_helper->addLabelForPoint($_pointForInvitee) ?>
                </td>
            </tr>
        <?php endif ?>
        <?php if ($this->getColspan() == 1): ?></thead><?php endif ?>
    <?php endif ?>

<?php

endif // End if ($this->isEnable())
?>
