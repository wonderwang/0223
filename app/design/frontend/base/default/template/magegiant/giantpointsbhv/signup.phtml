<script type="text/javascript">
    //<![CDATA[
    document.observe('dom:loaded', function () {
        <?php if ($this->getRewardBirthday()): ?>
        if ($('form-validate') && $('form-validate').down('.customer-dob')) {
            var elBirthday = $('form-validate').down('.customer-dob');
            elBirthday.insert({
                after: '<div class="giantpoints-birthday">' + '<?php echo $this->getRewardBirthday() ?>' + '</div>'
            });
        }
        <?php endif; ?>

        <?php if ($this->getRewardRegistration()): ?>
        if ($$('.account-login .new-users').last()) {
            if ($$('.account-login .new-users').last().down('.buttons-set')) {
                var elRegistration = $$('.account-login .new-users').last().down('.buttons-set');
                elRegistration.insert(
                    '<div class="clear"></div><div class="giantpoints-registration" style="width:inherit">' + '<?php echo $this->getRewardRegistration()?>' + '</div >'
                );
            }
        }
        <?php endif; ?>
    });
    //]]>
</script>