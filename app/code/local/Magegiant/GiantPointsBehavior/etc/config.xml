<config>
    <modules>
        <Magegiant_GiantPointsBehavior>
            <version>0.1.0</version>
        </Magegiant_GiantPointsBehavior>
    </modules>
    <frontend>
        <routers>
            <giantpointsbehavior>
                <use>standard</use>
                <args>
                    <module>Magegiant_GiantPointsBehavior</module>
                    <frontName>giantpointsbhv</frontName>
                </args>
            </giantpointsbehavior>
        </routers>
        <layout>
            <updates>
                <giantpointsbehavior>
                    <file>magegiant/giantpointsbehavior.xml</file>
                </giantpointsbehavior>
            </updates>
        </layout>
        <translate>
            <modules>
                <Magegiant_GiantPointsBehavior>
                    <files>
                        <default>Magegiant_GiantPointsBehavior.csv</default>
                    </files>
                </Magegiant_GiantPointsBehavior>
            </modules>
        </translate>
    </frontend>
    <admin>
        <routers>
            <giantpointsbehavioradmin>
                <use>admin</use>
                <args>
                    <module>Magegiant_GiantPointsBehavior</module>
                    <frontName>giantpointsbhvadmin</frontName>
                </args>
            </giantpointsbehavioradmin>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <giantpointsbehavior>
                    <file>magegiant/giantpointsbehavior.xml</file>
                </giantpointsbehavior>
            </updates>
        </layout>
        <translate>
            <modules>
                <Magegiant_GiantPointsBehavior>
                    <files>
                        <default>Magegiant_GiantPointsBehavior.csv</default>
                    </files>
                </Magegiant_GiantPointsBehavior>
            </modules>
        </translate>
    </adminhtml>
    <global>
        <models>
            <giantpointsbhv>
                <class>Magegiant_GiantPointsBehavior_Model</class>
                <resourceModel>giantpointsbhv_mysql4</resourceModel>
            </giantpointsbhv>
            <giantpointsbhv_mysql4>
                <class>Magegiant_GiantPointsBehavior_Model_Mysql4</class>
                <entities>
                </entities>
            </giantpointsbhv_mysql4>
        </models>
        <resources>
            <giantpoints_behavior_setup>
                <setup>
                    <module>Magegiant_GiantPointsBehavior</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </giantpoints_behavior_setup>
            <giantpointsbehavior_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </giantpointsbehavior_write>
            <giantpointsbehavior_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </giantpointsbehavior_read>
        </resources>
        <blocks>
            <giantpointsbhv>
                <class>Magegiant_GiantPointsBehavior_Block</class>
            </giantpointsbhv>
        </blocks>
        <helpers>
            <giantpointsbhv>
                <class>Magegiant_GiantPointsBehavior_Helper</class>
            </giantpointsbhv>
        </helpers>
        <giantpoints>
            <actions>
                <!--Behavior Earning Point-->
                <customer_register>giantpointsbhv/actions_earning_customerRegister</customer_register>
                <customer_subscription>giantpointsbhv/actions_earning_customerSubscription</customer_subscription>
                <review_approved>giantpointsbhv/actions_earning_reviewApproved</review_approved>
                <customer_tag_product>giantpointsbhv/actions_earning_customerTagProduct</customer_tag_product>
                <customer_participate_in_poll>giantpointsbhv/actions_earning_customerPoll</customer_participate_in_poll>
                <customer_send_friend>giantpointsbhv/actions_earning_customerSendFriend</customer_send_friend>
                <customer_birthday>giantpointsbhv/actions_earning_customerBirthday</customer_birthday>
                <facebook_like>giantpointsbhv/actions_earning_facebookLike</facebook_like>
                <facebook_unlike>giantpointsbhv/actions_earning_facebookUnlike</facebook_unlike>
                <google_on>giantpointsbhv/actions_earning_googleOn</google_on>
                <google_off>giantpointsbhv/actions_earning_googleOff</google_off>
                <tweet>giantpointsbhv/actions_earning_tweetOnTwitter</tweet>
                <!--Purchase Share-->
                <purchase_facebook_share>giantpointsbhv/actions_earning_purchase_facebook_share</purchase_facebook_share>
                <purchase_twitter_tweet>giantpointsbhv/actions_earning_purchase_twitter_tweet</purchase_twitter_tweet>
                <!--/Purchase Share-->
            </actions>
            <behavior>
                <rule>
                    <!--Customer Events-->
                    <giantpoints_behavior_rule_action_customer_birthday>
                        <class>giantpointsbhv/rule_action_customer_birthday</class>
                    </giantpoints_behavior_rule_action_customer_birthday>
                    <!--/Customer Events-->
                    <!--========Social========-->
                    <giantpoints_behavior_rule_action_social_facebook_like>
                        <class>giantpointsbhv/rule_action_social_facebook_like</class>
                    </giantpoints_behavior_rule_action_social_facebook_like>
                    <giantpoints_behavior_rule_action_social_twitter_tweet>
                        <class>giantpointsbhv/rule_action_social_twitter_tweets</class>
                    </giantpoints_behavior_rule_action_social_twitter_tweet>
                    <giantpoints_behavior_rule_action_social_google_plusOne>
                        <class>giantpointsbhv/rule_action_social_google_plusOne</class>
                    </giantpoints_behavior_rule_action_social_google_plusOne>
                    <giantpoints_behavior_rule_action_social_purchase_facebook_share>
                        <class>giantpointsbhv/rule_action_social_purchase_facebook_share</class>
                    </giantpoints_behavior_rule_action_social_purchase_facebook_share>
                    <giantpoints_behavior_rule_action_social_purchase_twitter_tweet>
                        <class>giantpointsbhv/rule_action_social_purchase_twitter_tweet</class>
                    </giantpoints_behavior_rule_action_social_purchase_twitter_tweet>
                    <!--/========Social=========-->
                </rule>
                <probational>
                    <giantpoints_customer_signup/>
                    <giantpoints_customer_signup_newsletter/>
                    <giantpoints_customer_send_friend/>
                    <giantpoints_customer_tags_product/>
                    <giantpoints_customer_facebook_like/>
                    <giantpoints_customer_twitter_tweets/>
                    <giantpoints_customer_google_plus/>
                    <giantpoints_customer_purchase_facebook_share/>
                    <giantpoints_customer_purchase_twitter_tweet/>
                </probational>
            </behavior>
        </giantpoints>
        <events>
            <sociallogin_customer_register_success>
                <observers>
                    <customer_save_observer>
                        <type>singleton</type>
                        <class>giantpointsbhv/observer</class>
                        <method>customerRegisterSuccess</method>
                    </customer_save_observer>
                </observers>
            </sociallogin_customer_register_success>
            <!--Behavior Earning Event-->
            <controller_action_postdispatch_customer_account_createpost>
                <observers>
                    <giantpoints_postdispatch_customer_account_createpost>
                        <class>giantpointsbhv/observer</class>
                        <method>postdispatchCustomerAccountCreatePost</method>
                    </giantpoints_postdispatch_customer_account_createpost>
                </observers>
            </controller_action_postdispatch_customer_account_createpost>
            <controller_action_postdispatch_checkout_onepage_saveOrder>
                <observers>
                    <giantpoints_postdispatch_checkout_onepage_saveOrder>
                        <class>giantpointsbhv/observer</class>
                        <method>postdispatchCustomerAccountCreatePost</method>
                    </giantpoints_postdispatch_checkout_onepage_saveOrder>
                </observers>
            </controller_action_postdispatch_checkout_onepage_saveOrder>
            <newsletter_subscriber_save_after>
                <observers>
                    <giantpoints_add_points_for_subscription>
                        <type>singleton</type>
                        <class>giantpointsbhv/observer</class>
                        <method>earnPointsForSubscription</method>
                    </giantpoints_add_points_for_subscription>
                </observers>
            </newsletter_subscriber_save_after>
            <review_save_after>
                <observers>
                    <giantpoints_add_points_for_review>
                        <type>singleton</type>
                        <class>giantpointsbhv/observer</class>
                        <method>earnPointsForReview</method>
                    </giantpoints_add_points_for_review>
                </observers>
            </review_save_after>
            <model_save_after>
                <observers>
                    <giantpoints_add_points_for_participate>
                        <type>singleton</type>
                        <class>giantpointsbhv/observer</class>
                        <method>modelSaveAfter</method>
                    </giantpoints_add_points_for_participate>
                </observers>
            </model_save_after>
        </events>
    </global>
    <default>
        <giantpoints>
            <behavior>
                <is_enabled>1</is_enabled>
            </behavior>
            <!--==========Behavior Configuration=========-->
            <group_customer_birthday>
                <email_template>giantpoints_group_customer_birthday_email_template</email_template>
                <enable_email>1</enable_email>
            </group_customer_birthday>
            <purchase_share>
                <enable>1</enable>
                <enable_facebook_share>1</enable_facebook_share>
                <enable_twitter_tweet>1</enable_twitter_tweet>
            </purchase_share>
            <!--==========End Behavior===========-->
        </giantpoints>

    </default>
    <crontab>
        <jobs>
            <giantpoints_birthday_present>
                <schedule>
                    <cron_expr>0 2 * * *</cron_expr>
                </schedule>
                <run>
                    <model>giantpointsbhv/cron::addBirthdayTransactions</model>
                </run>
            </giantpoints_birthday_present>
        </jobs>
    </crontab>
</config>