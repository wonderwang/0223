<?xml version="1.0"?>
<widgets>
    <newproducts_list type="newproducts/list" translate="name description" module="newproducts" >
        <name>EM New Products</name>
        <description type="desc">EM New Products in Multi Categories</description>
        <parameters>			
		            
            <new_category translate="label">            
                <label>Choose Categories</label>
                <visible>1</visible>
                <description>You can choose many categories. Leave empty for selecting all categories</description>
                <type>multiselect</type>
                <source_model>newproducts/categorytree</source_model>          
            </new_category>
            
            <limit_count>
                <label>Limit Count</label>
                <description>The numbers of product will be show</description>
                <visible>1</visible>
                <required>1</required>
                <type>text</type>
                <value>10</value>
            </limit_count>
			
			<column_count>
                <label>Column Count</label>
                <description>The numbers of products per row. if not specified or 0, ul will hold all li.item</description>
                <visible>1</visible>
                <required>0</required>
                <type>text</type>
            </column_count>
			
          <order_by>
                <label>Order by</label>
                <visible>1</visible>
                <required>1</required>
                <type>select</type>
				<sort_order>4</sort_order>
                <values>
                    <order_by_1 translate="label">
                        <value>name asc</value>
                        <label>Name ASC</label>
                    </order_by_1>
					<order_by_11 translate="label">
                        <value>name desc</value>
                        <label>Name DESC</label>
                    </order_by_11>				
                    <order_by_3 translate="label">
                        <value>price asc</value>
                        <label>Price ASC</label>
                    </order_by_3>
                    <order_by_31 translate="label">
                        <value>price desc</value>
                        <label>Price DESC</label>
                    </order_by_31>					
                </values>
            </order_by>
            
            <custom_class>
                <label>Custom Wrapper Class</label>	
    			<visible>1</visible>
                <required>0</required>
    			<type>text</type>
            </custom_class>
            
			<frontend_title>
				<label>Frontend Title</label>	
				<visible>1</visible>
                <required>0</required>
				<type>text</type>
			</frontend_title>
            
			<item_class>
                <label>Item Class Custom</label>
                <description>Custom class for li item</description>
				<visible>1</visible>
				<type>text</type>
            </item_class>
			
            <frontend_description>
				<label>Frontend Description</label>	
				<visible>1</visible>
                <required>0</required>
				<type>text</type>
			</frontend_description>
			
			<item_width>
                <label>Item Width</label>	
				<description>unit: px</description>
				<visible>1</visible>
                <required>0</required>
				<type>text</type>
				<value></value>
            </item_width>
            
            <item_height>
                <label>Item Height</label>
				<description>unit: px</description>
				<visible>1</visible>
                <required>0</required>
				<type>text</type>
				<value></value>
            </item_height>

			<item_spacing>
                <label>Item Spacing</label>
				<description>Spacing between 2 items. unit: px</description>
				<visible>1</visible>
                <required>0</required>
				<type>text</type>
				<value></value>
            </item_spacing>
            
            <thumbnail_width>
                <label>Thumbnail Width</label>	
				<visible>1</visible>
                <required>1</required>
				<type>text</type>
				<value>150</value>
            </thumbnail_width>
            
            <thumbnail_height>
                <label>Thumbnail Height</label>	
				<visible>1</visible>
                <required>1</required>
				<type>text</type>
				<value>150</value>
            </thumbnail_height>
            
            <show_product_name>
                <label>Show Product's Name</label>	
				<visible>1</visible>
                <required>0</required>
				<type>select</type>
				<values>
                    <yes translate="label">
                        <value>true</value>
                        <label>Yes</label>
                    </yes>
                    <no translate="label">
                        <value>false</value>
                        <label>No</label>
                    </no>
                </values>
            </show_product_name>
            
            <show_thumbnail>
                <label>Show Thumbnail</label>	
				<visible>1</visible>
                <required>0</required>
				<type>select</type>
				<values>
                    <yes translate="label">
                        <value>true</value>
                        <label>Yes</label>
                    </yes>
                    <no translate="label">
                        <value>false</value>
                        <label>No</label>
                    </no>
                </values>
            </show_thumbnail>
            
            <alt_img>
                <label>Alternative image</label>    
                <description>Image should be displayed when hover to the thumbnail image.</description>
                <visible>1</visible>
                <required>0</required>
                <type>select</type>
                <source_model>newproducts/config_altimg</source_model>
                <show_in_default>1</show_in_default>
                <show_in_website>1</show_in_website>
                <show_in_store>1</show_in_store>
            </alt_img>

            <show_description>
                <label>Show Product's Description</label>	
				<visible>1</visible>
                <required>0</required>
				<type>select</type>
				<values>
                    <yes translate="label">
                        <value>true</value>
                        <label>Yes</label>
                    </yes>
                    <no translate="label">
                        <value>false</value>
                        <label>No</label>
                    </no>
                </values>
            </show_description>
            
            <show_price>
                <label>Show Product's Price</label>	
				<visible>1</visible>
                <required>0</required>
				<type>select</type>
				<values>
                    <yes translate="label">
                        <value>true</value>
                        <label>Yes</label>
                    </yes>
                    <no translate="label">
                        <value>false</value>
                        <label>No</label>
                    </no>
                </values>
            </show_price>
            
            <show_reviews>
                <label>Show Product's Reviews</label>	
				<visible>1</visible>
                <required>0</required>
				<type>select</type>
				<values>
                    <yes translate="label">
                        <value>true</value>
                        <label>Yes</label>
                    </yes>
                    <no translate="label">
                        <value>false</value>
                        <label>No</label>
                    </no>
                </values>
            </show_reviews>
            
            <show_addtocart>
                <label>Show Add to cart button</label>	
				<visible>1</visible>
                <required>0</required>
				<type>select</type>
				<values>
                    <yes translate="label">
                        <value>true</value>
                        <label>Yes</label>
                    </yes>
                    <no translate="label">
                        <value>false</value>
                        <label>No</label>
                    </no>
                </values>
            </show_addtocart>
            
            <show_addto>
                <label>Show Add to wishlist-compare button</label>	
				<visible>1</visible>
                <required>0</required>
				<type>select</type>
				<values>
                    <yes translate="label">
                        <value>true</value>
                        <label>Yes</label>
                    </yes>
                    <no translate="label">
                        <value>false</value>
                        <label>No</label>
                    </no>
                </values>
            </show_addto>            
            
			<show_label>
                <label>Show EM Label</label>	
				<visible>1</visible>
                <required>0</required>
				<type>select</type>
				<values>
                    <yes translate="label">
                        <value>true</value>
                        <label>Yes</label>
                    </yes>
                    <no translate="label">
                        <value>false</value>
                        <label>No</label>
                    </no>
                </values>
            </show_label>
            
            <choose_template translate="label">
                <label>Frontend Template</label>
                <visible>1</visible>
                <required>1</required>
                <type>select</type>
                <values>
                    <list translate="label">
                        <value>em_new_products/new_list.phtml</value>
                        <label>List new products</label>
                    </list>
					<grid translate="label">
                        <value>em_new_products/new_grid.phtml</value>
                        <label>Grid new products</label>
                    </grid>
                </values>				
            </choose_template>
			<cache_lifetime>				
				<label>Cache Lifetime (Seconds)</label>
				<description>7200 seconds by default, if not set. To refresh instantly, Clear the Blocks HTML Output Cache.</description>
				<visible>1</visible>				
				<type>text</type>
				<value></value>
			</cache_lifetime>
			
        </parameters>
    </newproducts_list>    
</widgets>
