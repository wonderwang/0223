<?xml version="1.0"?><config>    <modules>        <EM_LayeredNavigation>            <version>1.0.0</version>        </EM_LayeredNavigation>    </modules>    <frontend>        <routers>            <layerednavigation>                <use>standard</use>                <args>                    <module>EM_LayeredNavigation</module>                    <frontName>layernav</frontName>                </args>            </layerednavigation>        </routers>		<layout>			<updates>				<layerednavigation>					<file>em_layerednavigation.xml</file>				</layerednavigation>			</updates>		</layout>    </frontend>    <admin>        <routers>			<layerednavigation>				<use>admin</use>				<args>					<module>EM_LayeredNavigation</module>					<frontName>layernav</frontName>				</args>			</layerednavigation>        </routers>    </admin>	<adminhtml>		<menu>			<emthemes module="layerednavigation">				<title>EMThemes</title>				<sort_order>71</sort_order>               				<children>					<layerednavigation module="layerednavigation">						<title>EM Layered Navigation</title>						<sort_order>50</sort_order>						<action>layernav/adminhtml_filter</action>					</layerednavigation>				</children>			</emthemes>		</menu>        <acl>            <resources>                <admin>                    <children>                        <system>                            <children>                                <config>                                    <children>                                        <layerednavigation>                                            <title>Layered Navigation</title>                                        </layerednavigation>                                    </children>                                </config>                            </children>                        </system>                    </children>                </admin>            </resources>        </acl>		<layout>			<updates>				<layerednavigation>					<file>em_layerednavigation.xml</file>				</layerednavigation>			</updates>		</layout>    </adminhtml>    <global>        <models>            <layerednavigation>                <class>EM_LayeredNavigation_Model</class>                <resourceModel>layerednavigation_resource</resourceModel>            </layerednavigation>            <layerednavigation_resource>                <class>EM_LayeredNavigation_Model_Resource</class>                <entities>                    <filter>                        <table>ln_filter</table>                    </filter>                    <option>                        <table>ln_option</table>                    </option>                </entities>            </layerednavigation_resource>            <catalog>                <rewrite>                    <layer>EM_LayeredNavigation_Model_Catalog_Layer</layer>                    <layer_filter_item>EM_LayeredNavigation_Model_Catalog_Filter_Item</layer_filter_item>                    <layer_filter_attribute>EM_LayeredNavigation_Model_Catalog_Filter_Attribute</layer_filter_attribute>                    <layer_filter_price>EM_LayeredNavigation_Model_Catalog_Filter_Price</layer_filter_price>                </rewrite>            </catalog>			<catalogsearch>                <rewrite>                    <layer>EM_LayeredNavigation_Model_Search_Layer</layer>                    <layer_filter_attribute>EM_LayeredNavigation_Model_Search_Filter_Attribute</layer_filter_attribute>                </rewrite>			</catalogsearch>            <catalog_resource>                <rewrite>                    <layer_filter_attribute>EM_LayeredNavigation_Model_Resource_Catalog_Filter_Attribute</layer_filter_attribute>                </rewrite>            </catalog_resource>        </models>        <resources>            <layerednavigation_setup>                <setup>                    <module>EM_LayeredNavigation</module>					<class>Mage_Eav_Model_Entity_Setup</class>                </setup>                <connection>                    <use>core_setup</use>                </connection>            </layerednavigation_setup>            <layerednavigation_write>                <connection>                    <use>core_write</use>                </connection>            </layerednavigation_write>            <layerednavigation_read>                <connection>                    <use>core_read</use>                </connection>            </layerednavigation_read>        </resources>        <blocks>            <layerednavigation>                <class>EM_LayeredNavigation_Block</class>            </layerednavigation>        </blocks>        <helpers>            <layerednavigation>                <class>EM_LayeredNavigation_Helper</class>            </layerednavigation>        </helpers>    </global>		<default>		<layerednavigation>			<general>				<enable_ajax>1</enable_ajax>			</general>			<!-- template for each display type -->			<template>				<text>em_layerednavigation/filter/text.phtml</text>				<radio>em_layerednavigation/filter/radio.phtml</radio>				<select>em_layerednavigation/filter/select.phtml</select>				<checkbox>em_layerednavigation/filter/checkbox.phtml</checkbox>				<slider>em_layerednavigation/filter/slider.phtml</slider>				<image>em_layerednavigation/filter/image.phtml</image>			</template>		</layerednavigation>	</default></config>