<config>
    <modules>
        <EM_Tabs>
            <version>0.0.1</version>
        </EM_Tabs>
    </modules>
    <admin>
        <routers>
            <tabs>
                <use>admin</use>
                <args>
                    <module>EM_Tabs</module>
                    <frontName>tabs</frontName>
                </args>
            </tabs>
        </routers>
    </admin>
	<frontend>
		<layout>
            <updates>
                <tabs>
                    <file>em_tabs.xml</file>
                </tabs>
            </updates>
        </layout>
	</frontend>
    <global>
        <helpers>
            <tabs>
                <class>EM_Tabs_Helper</class>
            </tabs>
        </helpers>
        <blocks>
             <tabs>
                <class>EM_Tabs_Block</class>
             </tabs>
        </blocks>
        <models>
            <tabs>
                <class>EM_Tabs_Model</class>
                <resourceModel>tabs_mysql4</resourceModel>
            </tabs>
			<widget> 
				<rewrite> 
					<widget>EM_Tabs_Model_Widget</widget>
				</rewrite> 
			</widget> 
            <tabs_mysql4>
                <class>EM_Tabs_Model_Mysql4</class>
            </tabs_mysql4>
        </models>
    </global>
</config>
