<widgets>
    <megamenupro type="megamenupro/megamenupro" module="megamenupro" translate="name description">
        <name>EM Megamenu Pro</name>
        <description type="desc"></description>
        <parameters>
			<menu>
                <label>Menu : </label>
                <visible>1</visible>
				<required>1</required>
                <description></description>
                <type>select</type>
                <source_model>megamenupro/megamenupro</source_model>
            </menu>
		</parameters>
    </megamenupro>
	<megamenupro_nav type="megamenupro/catalognavigation" module="megamenupro" translate="name description">
        <name>EM Catalog Navigation</name>
        <description type="desc"></description>
        <parameters>
			<category_id>
				<visible>1</visible>
				<required>1</required>
				<label>Category</label>
				<type>label</type>
				<sort_order>1</sort_order>
				<helper_block>
					<type>adminhtml/catalog_category_widget_chooser</type>
					<data>
						<button translate="open">
							<open>Select Category...</open>
						</button>
					</data>
				</helper_block>
            </category_id>
			<direction>
                <label>Direction</label>
                <visible>1</visible>
                <required>1</required>
                <type>select</type>
				<sort_order>2</sort_order>
                <values>
                    <horizontal translate="label">
                        <value>horizontal</value>
                        <label>Horizontal</label>
                    </horizontal>
					<vertical translate="label">
                        <value>vertical</value>
                        <label>Vertical</label>
                    </vertical>
                </values>
            </direction>
		</parameters>
    </megamenupro_nav>
</widgets>